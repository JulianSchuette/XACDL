grammar ie.lero.xacml.XACDL with org.eclipse.xtext.common.Terminals

generate xACDL "http://www.lero.ie/xacml/XACDL"

Model:
	attributeStore += AttributeStore
	(policysets += PolicySet)*
	(requests += Request)*
;

AttributeStore:
	'attributes {'
		(attributes += Attribute)*
	'}'
;

Attribute:
	name=ID ':' type=ID
;

Request:
	'request ' name=ID '{'
		(subjectAttributes += SubjectValue)*
		(actionAttributes += ActionValue)*
		(resourceAttributes += ResourceValue)*
		(environmentAttributes += EnvironmentValue)*
	'}'
;

SubjectValue:
	'subject' attribute = [Attribute] '=' value=ID
;

ActionValue:
	'action' attribute = [Attribute] '=' value=ID
;

ResourceValue:
	'resource' attribute = [Attribute] '=' value=ID
;

EnvironmentValue:
	'environment' attribute = [Attribute] '=' value=ID
;

PolicySet:
	'policyset' name=ID '{'
		'combinationAlgorithm' combination=ID
		target+=Target
		(policies += Policy)*
	'}'
;

Policy:
	'policy' name=ID '{'
		target += Target
		(rules += Rule)*
	'}'
;

Rule:
	'rule' name=ID 'effect' effect=ID '{'
		target+=Target
		(conditions += Condition)*
	'}'
;

Condition:
	'condition' '{'
		
	'}'
;

Target:
	'target' '{'
		'subjects {'
			(subjectMatches+=Match)*
		'}'
		'resources {'
			(resourceMatches+=Match)*
		'}'
		'actions {'
			(actionMatches+=Match)*
		'}'
	'}'
;

Match:
	attribute=[Attribute] operator+=Operator value=ID
;

Operator:
	name=ID
;

